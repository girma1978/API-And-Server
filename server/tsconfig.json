{
  "extends": "../tsconfig.json",  // Inherit from the parent config
  "compilerOptions": {
    "rootDir": "src",  // Specify the root folder
    "outDir": "dist"   // Specify the output folder
  },
  "include": ["src"],  // Include all TypeScript files under src
  "exclude": [
    "node_modules",  // Exclude node_modules from the compilation process
    "**/*.test.ts"   // Optionally exclude test files if any
  ]
}

